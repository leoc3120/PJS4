<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homeActivity">

    <TextView
        android:id="@+id/texte2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIENVENUE SUR L'ACCUEIL !" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/caloriesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Objectifs"
                android:textFontWeight="700"
                android:fontFamily="@font/lato"/>

            <TextView
                android:id="@+id/caloriesDisponible"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories Disponibles"
                android:fontFamily="@font/lato"/>

            <TextView
                android:id="@+id/caloriesData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X disponibles"
                android:fontFamily="@font/lato"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/caloriesBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:showAnimationBehavior="outward"
                app:trackCornerRadius="12dp"
                app:trackThickness="20dp"
                app:indicatorColor="@color/teal_200"/>

            <TextView
                android:id="@+id/caloriesPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X% completed"
                android:fontFamily="@font/lato"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id = "@+id/bottom_navigation"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemBackground = "@color/orange"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        app:menu = "@menu/bottom_navigation_menu"
        tools:ignore="MissingConstraints" />

</LinearLayout>